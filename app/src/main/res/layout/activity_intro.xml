<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_intro"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_intro_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginTop_intro_image"
        android:src="@drawable/intro"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginTop_intro_text"
        android:text="@string/welcome"
        android:textSize="@dimen/textSize_intro"
        android:textStyle="bold"/>
</LinearLayout>